<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:padding="3dip"
	android:layout_width="fill_parent" android:layout_height="wrap_content">

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/biblecontents" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="horizontal"
		android:padding="2sp">
		<Spinner android:id="@+id/groups" style="?android:attr/buttonStyleSmall"
			android:layout_width="150dip" android:layout_height="wrap_content" />

	</RelativeLayout>

	<ListView android:id="@+id/ContentsListView"
		android:layout_height="wrap_content" android:layout_width="wrap_content">
	</ListView>

</LinearLayout>

	