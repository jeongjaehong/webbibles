<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:padding="3dip"
	android:layout_width="fill_parent" android:layout_height="wrap_content">

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/actionbuttons" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:orientation="horizontal"
	android:padding="2sp" android:gravity="right">

		<Button android:id="@+id/btn_allcheck" android:text="@string/btn_allcheck"
			style="?android:attr/buttonStyleSmall" android:layout_width="100dip"
			android:layout_height="wrap_content" android:gravity="center" />


		<Button android:id="@+id/btn_start" android:text="@string/btn_start"
			style="?android:attr/buttonStyleSmall" android:layout_width="100dip"
			android:layout_height="wrap_content" android:gravity="center"
			android:layout_toRightOf="@id/btn_allcheck" />
	</RelativeLayout>

	<ListView android:id="@+id/ContentsListView"
		android:layout_height="wrap_content" android:layout_width="fill_parent">
	</ListView>

</LinearLayout>

	