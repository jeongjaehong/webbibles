<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/biblecontents" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="horizontal"
	android:padding="5sp">

	<TextView android:id="@+id/title" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:singleLine="true"
		android:textStyle="italic" android:textSize="15sp" />

	<TextView android:id="@+id/songtext" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_below="@id/title"
		android:ellipsize="end"
		android:textSize="10sp" />

</RelativeLayout>


