<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/biblecontents" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="horizontal"
	android:padding="5sp">
	<TextView android:id="@+id/versestr" android:layout_width="wrap_content"
		android:textColor="@color/versestr_color" android:layout_height="wrap_content"
		android:textStyle="italic" />
	<TextView android:id="@+id/rowidcolon" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="  "
		android:layout_toRightOf="@id/versestr" />

	<TextView android:id="@+id/contents" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_toRightOf="@id/rowidcolon"
		android:textColorHighlight="#3300ff00" android:ellipsize="none" />

	<ImageView android:id="@+id/flag" android:src="@drawable/flag"
		android:layout_width="12dip" android:layout_height="12dip"
		android:adjustViewBounds="true" android:scaleType="fitCenter"
		android:visibility="gone" android:layout_below="@id/versestr" />

</RelativeLayout>
