<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.nilriri.webbibles" android:installLocation="auto"
	android:versionName="3.3.4" android:versionCode="195">
	<application android:icon="@drawable/app_notes"
		android:label="@string/app_name" android:allowClearUserData="false"
		android:restoreAnyVersion="true" android:debuggable="false"
		android:allowBackup="true" android:restoreNeedsApplication="true">

<!-- 
		<meta-data android:name="PublisherId" android:value="1ZSZLCDC03" />
		<meta-data android:name="SlotID" android:value="1ZSZLCDC03" />

		<meta-data android:name="PublisherId" android:value="PE08TRFN03" />
		<meta-data android:name="SlotID" android:value="PE08TRFN03" />
 --> 
		<receiver android:name=".widget.AppWidgetProvider4x2"
			android:label="@string/widget_label_4x2" android:description="@string/widget_desc"
			android:icon="@drawable/app_notes">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/widget4x2" />
		</receiver>
		<!--
			<uses-library android:name="com.google.android.maps"
			android:required="true" />
		-->

		<activity android:name=".BibleMain" android:label="@string/app_caption"
			android:theme="@android:style/Theme.Light" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".tools.SearchData" android:label="@string/title_searchdata"
			android:theme="@android:style/Theme.Dialog">
		</activity>

		<!--
			사용자 환경설정대로 가로세로 표현되게.. android:screenOrientation="sensor"
			android:configChanges="keyboardHidden|orientation"
			android:theme="@android:style/Theme.Light"
		-->
		<activity android:name=".BibleViewer" android:label="@string/app_caption"
			android:theme="@android:style/Theme.Light" android:screenOrientation="user"
			android:configChanges="screenLayout|keyboardHidden|orientation">
			<intent-filter>
				<action android:name="org.nilriri.webbibles.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="vnd.org.nilriri/web-bible" />
			</intent-filter>
		</activity>

		<activity android:name=".NotesList" android:theme="@android:style/Theme.Light"
			android:label="@string/title_notelist">
		</activity>

		<activity android:name=".tools.DataManager" android:theme="@android:style/Theme.Dialog"
			android:label="@string/title_datamanager" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation">
		</activity>

		<activity android:name=".tools.VersionSelector"
			android:theme="@android:style/Theme.Dialog" android:label="@string/title_versionselector"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
		</activity>

		<activity android:name=".tools.CopyBible" android:theme="@android:style/Theme.Dialog"
			android:label="@string/title_databackup" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation">
		</activity>

		<activity android:name=".tools.DeleteBible" android:theme="@android:style/Theme.Dialog"
			android:label="@string/title_deletebible" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation">
		</activity>

		<activity android:name=".tools.DownloadBible" android:theme="@android:style/Theme.Dialog"
			android:label="@string/title_datadownload" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation">
		</activity>

		<activity android:name=".tools.SendMail" android:theme="@android:style/Theme.Light"
			android:label="@string/title_sendmail">
		</activity>

		<activity android:name=".BookmarkList" android:theme="@android:style/Theme.Dialog"
			android:label="@string/title_bookmark">
		</activity>

		<activity android:name=".FavoritesList" android:theme="@android:style/Theme.Light"
			android:label="@string/title_favorites">
		</activity>

		<activity android:name=".NoteEditor" android:theme="@android:style/Theme.Light"
			android:label="@string/title_marklist">
		</activity>

		<activity android:name=".TitleEditor" android:label="@string/title_edit_title"
			android:theme="@android:style/Theme.Dialog"
			android:windowSoftInputMode="stateVisible">
		</activity>

		<activity android:name=".GroupEditor" android:label="@string/title_favorite_group"
			android:theme="@android:style/Theme.Dialog"
			android:windowSoftInputMode="stateVisible">
		</activity>

		<activity android:name=".com.Prefs" android:label="@string/settings_title">
		</activity>

		<activity android:name=".About" android:label="@string/about_title"
			android:theme="@android:style/Theme.Dialog">
		</activity>

		<activity android:name=".Song" android:label="@string/song_title">
		</activity>

		<activity android:name=".tools.BibleSearchList"
			android:theme="@android:style/Theme.Light" android:label="@string/title_searchresult">
		</activity>

		<!--
			<activity android:name="tools.GoogleMap"
			android:theme="@android:style/Theme.Light"
			android:label="@string/app_caption"
			android:screenOrientation="sensor"
			android:configChanges="keyboardHidden|orientation"> </activity>
		-->

	</application>




	<uses-sdk android:targetSdkVersion="8" android:minSdkVersion="7"/>


	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_OWNER_DATA"></uses-permission>
	<uses-permission android:name="android.permission.CLEAR_APP_USER_DATA"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<uses-permission android:name="android.permission.WRITE_SETTINGS"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

	<uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
	<uses-permission android:name="android.permission.SEND_SMS"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_SMS"></uses-permission>
	<uses-permission android:name="android.permission.BROADCAST_SMS"></uses-permission>
</manifest>

